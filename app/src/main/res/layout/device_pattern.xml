<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/devicepattern_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="25dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/devicepattern_tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model"
        android:textSize="25dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/devicepattern_tv_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serial"
        android:textSize="25dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/devicepattern_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Taken"
        android:textSize="25dp"
        />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/devicepattern_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/devicepattern_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="25dp"
        android:layout_marginRight="40dp"/>

        <Button
            android:id="@+id/devicepattern_bt_return"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:text="return device" />
        <Button
            android:id="@+id/devicepattern_bt_take"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:text="take" />

        <Button
            android:id="@+id/devicepattern_bt_delete"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:onClick="deviceListPress"
            android:text="delete" />


    </LinearLayout>

</LinearLayout>