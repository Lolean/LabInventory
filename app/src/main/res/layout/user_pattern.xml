<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:onClick="userListPress">


    <LinearLayout
        android:id="@+id/userpattern_upperlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/userpattern_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="25dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/userpattern_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="25dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/userpattern_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:textSize="25dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/userpattern_downlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <Button
        android:id="@+id/userpattern_bt_promote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promote"
        android:onClick="userListPress"/>

    <Button
        android:id="@+id/userpattern_bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:onClick="userListPress"/>

    </LinearLayout>

</LinearLayout>